---
import { SITE, SOCIALS } from "@consts";
import Container from "@components/Container.astro";
---

<footer class="relative bg-white dark:bg-gray-950">
  <div class="py-16">
    <Container size="md">
      <!-- Back to top button -->
      <div class="flex items-center justify-center sm:justify-end mb-12">
        <button
          id="back-to-top"
          aria-label="Back to top of page"
          class="group flex items-center gap-2 py-2 px-4 rounded-full bg-white/80 dark:bg-gray-900/80 border border-gray-200 dark:border-gray-800 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="stroke-gray-700 dark:stroke-gray-300 group-hover:stroke-blue-600 dark:group-hover:stroke-blue-400 transition-colors -rotate-90"
          >
            <line
              x1="19"
              y1="12"
              x2="5"
              y2="12"
              class="opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300 ease-out"
            ></line>
            <polyline
              points="12 19 5 12 12 5"
              class="group-hover:translate-y-0 transition-transform duration-300 ease-out"
            ></polyline>
          </svg>
          <span
            class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
          >
            Back to top
          </span>
        </button>
      </div>

      <!-- Footer Content -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-y-8 md:gap-x-8">
        <!-- Brand & Copyright -->
        <div class="flex flex-col items-center md:items-start">
          <a
            href="/"
            class="flex items-center gap-2 mb-2 group hover:scale-105 transition-transform"
          >
            <div
              class="w-8 h-8 rounded-full overflow-hidden border border-gray-200 dark:border-gray-800"
            >
              <img
                src="/brand.png"
                alt="Vedant Andhale"
                loading="lazy"
                class="w-full h-full object-cover"
              />
            </div>
            <span
              class="text-lg font-semibold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400"
            >
              {SITE.TITLE}
            </span>
          </a>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            &copy; {new Date().getFullYear()} All rights reserved
          </p>
        </div>

        <!-- Quick Links -->
        <div class="flex flex-col items-center md:items-start">
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">
            Quick Links
          </h3>
          <div
            class="flex flex-wrap justify-center md:justify-start gap-3 md:flex-col md:gap-2"
          >
            <a
              href="/blog"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors px-3 py-1.5 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800/50"
              >Blog</a
            >
            <a
              href="/projects"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors px-3 py-1.5 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800/50"
              >Projects</a
            >
            <a
              href="/resume"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors px-3 py-1.5 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800/50"
              >Resume</a
            >
          </div>
        </div>

        <!-- Social Links -->
        <div class="flex flex-col items-center md:items-start">
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">
            Connect With Me
          </h3>
          <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            {
              SOCIALS.map((SOCIAL) => (
                <a
                  href={SOCIAL.HREF}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                  class="group flex items-center justify-center w-10 h-10 rounded-full bg-white/80 dark:bg-gray-900/80 border border-gray-200 dark:border-gray-800 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-110"
                >
                  <svg class="w-5 h-5 fill-gray-700 dark:fill-gray-300 group-hover:fill-blue-600 dark:group-hover:fill-blue-400 transition-colors">
                    <use href={`/social.svg#${SOCIAL.ICON}`} />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Footer Note -->
      <div
        class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800 text-center"
      >
        <p class="text-xs text-gray-500 dark:text-gray-500">
          Designed with passion and code by Vedant Andhale
        </p>
      </div>
    </Container>
  </div>
</footer>

<script is:inline>
  function goBackToTop(event) {
    event.preventDefault();
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  }

  function inintializeBackToTop() {
    const backToTop = document.getElementById("back-to-top");
    backToTop?.addEventListener("click", goBackToTop);
  }

  document.addEventListener("astro:after-swap", inintializeBackToTop);
  inintializeBackToTop();
</script>
