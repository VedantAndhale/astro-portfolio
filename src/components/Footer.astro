---
import { SITE, SOCIALS } from "@consts";
import Container from "@components/Container.astro";
import { Image } from "astro:assets";
---

<footer class="relative bg-white dark:bg-black safe-bottom">
  <div
    class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-blue-300 dark:via-blue-700/40 to-transparent"
  >
  </div>

  <div class="absolute inset-0 opacity-[0.025] dark:opacity-[0.015]">
    <div
      class="h-full w-full"
      style="background-image: radial-gradient(rgba(59, 130, 246, 0.2) 1px, transparent 1px); background-size: 32px 32px;"
    >
    </div>
  </div>

  <div class="py-8 sm:py-10 md:py-12 relative z-10">
    <Container size="md">
      <!-- Mobile Logo Section (only visible on mobile) -->
      <div class="flex flex-col items-center mb-8 md:hidden">
        <a
          href="/"
          class="flex items-center gap-3 sm:gap-3.5 mb-3.5 group hover:scale-105 transition-transform"
          aria-label="Home page"
        >
          <div class="relative">
            <div
              class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-500 dark:from-blue-600 dark:via-indigo-700 dark:to-purple-700 blur-sm opacity-70 animate-pulse-slow"
            >
            </div>
            <div
              class="relative w-10 h-10 sm:w-11 sm:h-11 rounded-full overflow-hidden border-2 border-white dark:border-gray-800 shadow-md"
            >
              <Image
                src="/brand.png"
                alt={SITE.TITLE}
                width={44}
                height={44}
                loading="lazy"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
          <span
            class="text-base sm:text-lg font-bold font-display tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-indigo-600 to-violet-600 dark:from-blue-400 dark:via-indigo-400 dark:to-violet-400"
          >
            {SITE.TITLE}
          </span>
        </a>
      </div>

      <!-- Back to Top Button -->
      <div class="flex items-center justify-center sm:justify-end mb-6 sm:mb-8">
        <button
          id="back-to-top"
          aria-label="Back to top of page"
          class="group relative flex items-center gap-2 py-2 px-4 sm:py-2.5 sm:px-5 rounded-full bg-white/95 dark:bg-gray-900/95 border border-gray-200 dark:border-gray-800 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105 hover:-translate-y-1 overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-gradient-to-r from-blue-50/40 to-indigo-50/40 dark:from-blue-900/15 dark:to-indigo-900/15 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
          </div>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="relative stroke-gray-700 dark:stroke-gray-300 group-hover:stroke-blue-600 dark:group-hover:stroke-blue-400 transition-colors"
          >
            <title>Arrow up</title>
            <line
              x1="12"
              y1="19"
              x2="12"
              y2="5"
              class="opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300 ease-out"
            ></line>
            <polyline
              points="5 12 12 5 19 12"
              class="group-hover:-translate-y-1 transition-transform duration-300 ease-out"
            ></polyline>
          </svg>

          <span
            class="relative text-sm font-medium font-display tracking-tight text-gray-700 dark:text-gray-300 group-hover:text-transparent bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-indigo-600 dark:group-hover:from-blue-400 dark:group-hover:to-indigo-400 transition-all duration-300"
          >
            Back to top
          </span>
        </button>
      </div>

      <!-- Main Footer Content -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 md:gap-10"
      >
        <!-- Quick Links Section -->
        <div class="flex flex-col items-center sm:items-start">
          <h3
            class="flex items-center justify-center sm:justify-start text-sm sm:text-base font-semibold font-display tracking-tight text-gray-900 dark:text-white mb-4 sm:mb-5 w-full"
          >
            <span
              class="w-8 h-8 sm:w-9 sm:h-9 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2.5 shadow-sm"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-blue-600 dark:text-blue-400"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <title>Arrow right</title>
                <path d="M9 18l6-6-6-6"></path>
              </svg>
            </span>
            Quick Links
          </h3>
          <div
            class="flex flex-wrap justify-center sm:justify-start gap-2 sm:flex-col sm:gap-2.5 w-full"
          >
            {
              ["Blog", "Projects", "Resume"].map((item) => (
                <a
                  href={`/${item.toLowerCase()}`}
                  class="group relative text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors px-3 sm:px-3.5 py-1.5 rounded-full hover:bg-blue-50/70 dark:hover:bg-blue-900/30 flex items-center hover:shadow-sm font-medium"
                  aria-label={`View ${item}`}
                >
                  <span class="absolute h-1.5 w-1.5 rounded-full bg-gray-300 dark:bg-gray-700 group-hover:bg-blue-500 dark:group-hover:bg-blue-500 transition-colors" />
                  <span class="ml-3">{item}</span>
                </a>
              ))
            }
          </div>
        </div>

        <!-- Connect With Me Section -->
        <div class="flex flex-col items-center sm:items-start">
          <h3
            class="flex items-center justify-center sm:justify-start text-sm sm:text-base font-semibold font-display tracking-tight text-gray-900 dark:text-white mb-4 sm:mb-5 w-full"
          >
            <span
              class="w-8 h-8 sm:w-9 sm:h-9 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2.5 shadow-sm"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-blue-600 dark:text-blue-400"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <title>Plus sign</title>
                <path d="M12 2v20M2 12h20"></path>
              </svg>
            </span>
            Connect With Me
          </h3>
          <div class="flex flex-wrap gap-3 justify-center sm:justify-start">
            {
              SOCIALS.map((SOCIAL) => (
                <a
                  href={SOCIAL.HREF}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                  class="group relative flex items-center justify-center w-10 h-10 sm:w-11 sm:h-11 rounded-full bg-white/95 dark:bg-gray-800/95 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-110 hover:-translate-y-1 overflow-hidden"
                >
                  <div class="absolute inset-0 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                  <svg class="relative z-10 w-4.5 h-4.5 sm:w-5 sm:h-5 fill-gray-700 dark:fill-gray-300 group-hover:fill-blue-600 dark:group-hover:fill-blue-400 transition-colors">
                    <title>{SOCIAL.NAME}</title>
                    <use href={`/social.svg#${SOCIAL.ICON}`} />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>

        <!-- Desktop Logo & Copyright Section (hidden on mobile) -->
        <div class="hidden md:flex flex-col items-start">
          <a
            href="/"
            class="flex items-center gap-3 sm:gap-3.5 mb-3.5 group hover:scale-105 transition-transform"
            aria-label="Home page"
          >
            <div class="relative">
              <div
                class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-500 dark:from-blue-600 dark:via-indigo-700 dark:to-purple-700 blur-sm opacity-70 animate-pulse-slow"
              >
              </div>
              <div
                class="relative w-9 h-9 sm:w-11 sm:h-11 rounded-full overflow-hidden border-2 border-white dark:border-gray-800 shadow-md"
              >
                <Image
                  src="/brand.png"
                  alt={SITE.TITLE}
                  width={44}
                  height={44}
                  loading="lazy"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
            <span
              class="text-base sm:text-lg font-bold font-display tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-indigo-600 to-violet-600 dark:from-blue-400 dark:via-indigo-400 dark:to-violet-400"
            >
              {SITE.TITLE}
            </span>
          </a>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
            &copy; {new Date().getFullYear()} All rights reserved
          </p>
          <p
            class="text-xs text-gray-600 dark:text-gray-400 max-w-md leading-relaxed"
          >
            Data-driven solutions and insights from an enthusiastic analyst and
            developer
          </p>
        </div>
      </div>

      <!-- Mobile Copyright Section (only visible on mobile) -->
      <div
        class="md:hidden mt-8 text-center border-t border-gray-200 dark:border-gray-800 pt-5"
      >
        <p class="text-sm text-gray-600 dark:text-gray-400">
          &copy; {new Date().getFullYear()} All rights reserved
        </p>
        <p
          class="text-xs text-gray-600 dark:text-gray-400 mt-2 max-w-xs mx-auto"
        >
          Data-driven solutions and insights from an enthusiastic analyst and
          developer
        </p>
      </div>
    </Container>
  </div>
</footer>

<script is:inline>
  function goBackToTop(event) {
    event.preventDefault();
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  }

  function inintializeBackToTop() {
    const backToTop = document.getElementById("back-to-top");
    backToTop?.addEventListener("click", goBackToTop);
  }

  document.addEventListener("astro:after-swap", inintializeBackToTop);
  inintializeBackToTop();
</script>
