---
import { SITE, SOCIALS } from "@consts";
import Container from "@components/Container.astro";
---

<footer class="relative bg-white dark:bg-gray-950 safe-bottom">
  <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-blue-200 dark:via-blue-800/30 to-transparent"></div>

  <div class="absolute inset-0 opacity-[0.02] dark:opacity-[0.01]">
    <div class="h-full w-full" style="background-image: radial-gradient(rgba(59, 130, 246, 0.15) 1px, transparent 1px); background-size: 40px 40px;"></div>
  </div>

  <div class="py-12 sm:py-16 md:py-20 relative z-10">
    <Container size="md">
      <div class="flex items-center justify-center sm:justify-end mb-12 sm:mb-16">
        <button
          id="back-to-top"
          aria-label="Back to top of page"
          class="group relative flex items-center gap-2 py-2 px-4 sm:py-2.5 sm:px-5 rounded-full bg-white/90 dark:bg-gray-900/90 border border-gray-200 dark:border-gray-800 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105 overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-blue-50/30 to-indigo-50/30 dark:from-blue-900/10 dark:to-indigo-900/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="relative stroke-gray-700 dark:stroke-gray-300 group-hover:stroke-blue-600 dark:group-hover:stroke-blue-400 transition-colors"
          >
            <line x1="12" y1="19" x2="12" y2="5" class="opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300 ease-out"></line>
            <polyline points="5 12 12 5 19 12" class="group-hover:-translate-y-1 transition-transform duration-300 ease-out"></polyline>
          </svg>

          <span class="relative text-xs sm:text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-transparent bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-indigo-600 dark:group-hover:from-blue-400 dark:group-hover:to-indigo-400 transition-all duration-300">
            Back to top
          </span>
        </button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-x-8">
        <div class="flex flex-col items-center md:items-start">
          <h3 class="flex items-center text-base font-semibold text-gray-900 dark:text-white mb-4 sm:mb-6">
            <span class="w-8 h-8 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </span>
            Quick Links
          </h3>
          <div class="flex flex-wrap justify-center md:justify-start gap-2 md:flex-col md:gap-3">
            {
              ['Blog', 'Projects', 'Resume'].map((item) => (
                <a
                  href={`/${item.toLowerCase()}`}
                  class="group relative text-xs sm:text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors px-3 sm:px-4 py-2 rounded-full hover:bg-blue-50/50 dark:hover:bg-blue-900/20 flex items-center"
                >
                  <span class="absolute h-1 w-1 rounded-full bg-gray-300 dark:bg-gray-700 group-hover:bg-blue-500 dark:group-hover:bg-blue-500 transition-colors"></span>
                  <span class="ml-3">{item}</span>
                </a>
              ))
            }
          </div>
        </div>

        <div class="flex flex-col items-center md:items-start">
          <h3 class="flex items-center text-base font-semibold text-gray-900 dark:text-white mb-4 sm:mb-6">
            <span class="w-8 h-8 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2v20M2 12h20"></path>
              </svg>
            </span>
            Connect With Me
          </h3>
          <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            {
              SOCIALS.map((SOCIAL) => (
                <a
                  href={SOCIAL.HREF}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                  class="group relative flex items-center justify-center w-10 sm:w-11 h-10 sm:h-11 rounded-full bg-white/90 dark:bg-gray-800/90 border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-110 overflow-hidden"
                >
                  <div class="absolute inset-0 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                  <svg class="relative z-10 w-4 sm:w-5 h-4 sm:h-5 fill-gray-700 dark:fill-gray-300 group-hover:fill-blue-600 dark:group-hover:fill-blue-400 transition-colors">
                    <use href={`/social.svg#${SOCIAL.ICON}`} />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>

        <div class="flex flex-col items-center md:items-start">
          <a href="/" class="flex items-center gap-3 mb-4 group hover:scale-105 transition-transform">
            <div class="relative">
              <div class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-500 dark:from-blue-600 dark:via-indigo-700 dark:to-purple-700 blur-sm opacity-70 animate-pulse-slow"></div>
              <div class="relative w-10 h-10 rounded-full overflow-hidden border-2 border-white dark:border-gray-800 shadow-md">
                <img src="/brand.png" alt="Vedant Andhale" loading="lazy" class="w-full h-full object-cover" />
              </div>
            </div>
            <span class="text-lg sm:text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-indigo-600 to-violet-600 dark:from-blue-400 dark:via-indigo-400 dark:to-violet-400">
              {SITE.TITLE}
            </span>
          </a>
          <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 text-center md:text-left mb-2">
            &copy; {new Date().getFullYear()} All rights reserved
          </p>
          <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 max-w-md text-center md:text-left">
            Data-driven solutions and insights from an enthusiastic analyst and developer
          </p>
        </div>
      </div>
    </Container>
  </div>
</footer>

<script is:inline>
  function goBackToTop(event) {
    event.preventDefault();
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  }

  function inintializeBackToTop() {
    const backToTop = document.getElementById("back-to-top");
    backToTop?.addEventListener("click", goBackToTop);
  }

  document.addEventListener("astro:after-swap", inintializeBackToTop);
  inintializeBackToTop();
</script>
