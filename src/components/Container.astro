---
import { cn } from "@lib/utils"

type Props = {
  size?: "sm" | "md" | "lg" | "xl";
};

const { size = "lg" } = Astro.props;

const maxWidthClass = {
  sm: "max-w-3xl",
  md: "max-w-4xl",
  lg: "max-w-5xl",
  xl: "max-w-6xl",
}[size];
---

<div class={`w-full mx-auto px-4 sm:px-6 lg:px-8 ${maxWidthClass}`}>
  <slot />
</div>
