---
type Props = {
  text: string;
  icon: string;
};
const { text, icon } = Astro.props;
---

<div
  class="relative px-3 sm:px-4 py-2 sm:py-2.5 rounded-xl flex gap-2 sm:gap-3 items-center border border-gray-100 dark:border-gray-800 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105 hover:-translate-y-1 group overflow-hidden"
>
  <!-- Premium gradient hover effect -->
  <div
    class="absolute inset-0 bg-gradient-to-r from-blue-50/40 to-indigo-50/40 dark:from-blue-900/10 dark:to-indigo-900/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
  >
  </div>

  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.02]">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <pattern
        id="techPattern"
        width="20"
        height="20"
        patternUnits="userSpaceOnUse"
      >
        <path
          d="M 20 0 L 0 0 0 20"
          fill="none"
          stroke="currentColor"
          stroke-width="0.5"
          class="text-blue-300 dark:text-blue-700"></path>
      </pattern>
      <rect width="100%" height="100%" fill="url(#techPattern)"></rect>
    </svg>
  </div>

  <!-- Icon with enhanced styling -->
  <div
    class="relative flex-shrink-0 w-6 sm:w-7 h-6 sm:h-7 flex items-center justify-center rounded-md bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-gray-100 dark:border-gray-800 p-1 transition-all duration-300 group-hover:shadow-sm"
  >
    <svg
      height={16}
      width={16}
      class="sm:h-5 sm:w-5 transition-transform group-hover:scale-110 text-blue-600 dark:text-blue-400"
    >
      <title>{text}</title>
      <use href={`/stack.svg#${icon}`}></use>
    </svg>
  </div>

  <!-- Text with gradient hover effect -->
  <span
    class="relative text-xs sm:text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-transparent bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-indigo-600 dark:group-hover:from-blue-400 dark:group-hover:to-indigo-400 transition-all duration-300"
  >
    {text}
  </span>
</div>
