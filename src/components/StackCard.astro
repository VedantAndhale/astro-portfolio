---
type Props = {
  text: string;
  icon: string;
};
const { text, icon } = Astro.props;
---
<div
  class="px-4 py-2 rounded-xl flex gap-3 items-center border border-gray-100 dark:border-gray-800 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105 group"
>
  <div class="flex-shrink-0 w-6 h-6 flex items-center justify-center text-blue-600 dark:text-blue-400">
    <svg height={20} width={20} class="transition-transform group-hover:scale-110">
      <use href={`/stack.svg#${icon}`}></use>
    </svg>
  </div>
  <span
    class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
  >
    {text}
  </span>
</div>
