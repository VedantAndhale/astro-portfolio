---
import { SITE, LINKS } from "@consts";
import { cn } from "@lib/utils";
const { pathname } = Astro.url;
const subpath = pathname.match(/[^/]+/g);
---

<div
  id="drawer"
  class="fixed inset-0 h-0 z-40 overflow-hidden flex flex-col items-center justify-center md:hidden bg-white dark:bg-gray-950 transition-all duration-500 ease-out"
>
  <!-- Backdrop blur overlay -->
  <div class="absolute inset-0 backdrop-blur-lg bg-white/70 dark:bg-gray-950/70"></div>

  <!-- Content container -->
  <div class="relative z-10 flex flex-col items-center justify-center gap-10 w-full max-w-md p-6">
    <!-- Brand logo -->
    <a
      href="/"
      class="flex items-center gap-2 group hover:scale-105 transition-transform"
    >
      <div class="w-10 h-10 rounded-full overflow-hidden border border-gray-200 dark:border-gray-800">
        <img
          src="/brand.png"
          alt={SITE.TITLE}
          loading="lazy"
          class="w-full h-full object-cover"
        />
      </div>
      <span
        class="text-xl font-semibold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400"
      >
        {SITE.TITLE}
      </span>
    </a>

    <!-- Navigation links -->
    <nav class="flex flex-col items-center gap-3 w-full">
      {
        LINKS.map((LINK) => (
          <a
            href={LINK.HREF}
            class={cn(
              "w-full py-3 px-6 rounded-xl flex justify-center font-medium text-base transition-all duration-300",
              pathname === LINK.HREF || "/" + subpath?.[0] === LINK.HREF
                ? "bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-md"
                : "bg-white/50 dark:bg-gray-900/50 border border-gray-200 dark:border-gray-800 text-gray-700 dark:text-gray-300 hover:scale-105 hover:shadow-md",
            )}
          >
            {LINK.TEXT}
          </a>
        ))
      }
    </nav>

    <!-- Action buttons -->
    <div class="flex gap-3 mt-2">
      <a
        href="/search"
        aria-label={`Search blog posts and projects on ${SITE.TITLE}`}
        class={cn(
          "flex items-center justify-center w-12 h-12 rounded-xl",
          "bg-white/80 dark:bg-gray-900/80 border border-gray-200 dark:border-gray-800",
          "text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400",
          "shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105",
          pathname === "/search" || "/" + subpath?.[0] === "/search"
            ? "pointer-events-none bg-gradient-to-r from-blue-600 to-indigo-600 text-white border-0"
            : "",
        )}
      >
        <svg class="w-5 h-5 stroke-current">
          <use href="/ui.svg#search"></use>
        </svg>
      </a>

      <a
        href="/rss.xml"
        target="_blank"
        aria-label={`RSS feed for ${SITE.TITLE}`}
        class="flex items-center justify-center w-12 h-12 rounded-xl bg-white/80 dark:bg-gray-900/80 border border-gray-200 dark:border-gray-800 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105"
      >
        <svg class="w-5 h-5 stroke-current">
          <use href="/ui.svg#rss"></use>
        </svg>
      </a>

      <button
        id="drawer-theme-button"
        aria-label="Toggle light and dark theme"
        class="flex items-center justify-center w-12 h-12 rounded-xl bg-white/80 dark:bg-gray-900/80 border border-gray-200 dark:border-gray-800 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 shadow-sm hover:shadow-md transition-all duration-300 hover:scale-105"
      >
        <svg class="block dark:hidden w-5 h-5 stroke-current">
          <use href="/ui.svg#sun"></use>
        </svg>
        <svg class="hidden dark:block w-5 h-5 stroke-current">
          <use href="/ui.svg#moon"></use>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  #drawer {
    transform: translateY(20px);
    opacity: 0;
    visibility: hidden;
  }

  #drawer.open {
    @apply h-full;
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }
</style>
