---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import { RESUME, SOCIALS } from "@consts";
import StackCard from "@components/StackCard.astro";

// Get collections data
const resumeCollection = await getCollection("resume");
const certificationsCollection = await getCollection("certifications");
const projectsCollection = await getCollection("projects");

// Sort collections by date
resumeCollection.sort(
  (a, b) =>
    new Date(b.data.dateStart).getTime() - new Date(a.data.dateStart).getTime(),
);

certificationsCollection.sort(
  (a, b) =>
    new Date(b.data.dateStart).getTime() - new Date(a.data.dateStart).getTime(),
);

// Get pinned projects
const pinnedProjects = projectsCollection
  .filter((project) => project.data.pin && !isNaN(parseInt(project.data.pin)))
  .sort((a, b) => parseInt(a.data.pin) - parseInt(b.data.pin));

// Render content
const resume = await Promise.all(
  resumeCollection.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  }),
);

const certifications = await Promise.all(
  certificationsCollection.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  }),
);

const projects = await Promise.all(
  pinnedProjects.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  }),
);

// Helper function to format dates
function formatWorkDate(input: Date | string) {
  if (typeof input === "string") return input;
  const month = input.toLocaleDateString("en-US", {
    month: "short",
  });
  const year = new Date(input).getFullYear();
  return `${month} ${year}`;
}

// Tech stack data
const stack = [
{ text: "SQL", icon: "sql" },  
{ text: "Python", icon: "python" },
  { text: "PowerBI", icon: "powerbi" },
  { text: "Excel", icon: "excel" },
  { text: "Pandas", icon: "pandas" },
  { text: "NumPy", icon: "numpy" },
  { text: "Matplotlib", icon: "matplotlib" },
  { text: "Scikit Learn", icon: "sklearn" },
  // { text: "Streamlit", icon: "streamlit" },

  { text: "Anaconda", icon: "anaconda" },
  { text: "Git", icon: "git" },
  { text: "VS Code", icon: "vscode" },
];
---

<PageLayout title={RESUME.TITLE} description={RESUME.DESCRIPTION}>
  <!-- Hero Section -->
  <TopLayout>
    <div class="relative animate-fadeIn">
      <!-- Decorative elements -->
      <div
        class="absolute -top-10 -left-10 w-40 h-40 bg-blue-100 dark:bg-blue-900/20 rounded-full blur-3xl opacity-70"
      >
      </div>
      <div
        class="absolute -top-10 -right-10 w-40 h-40 bg-indigo-100 dark:bg-indigo-900/20 rounded-full blur-3xl opacity-70"
      >
      </div>

      <div class="relative text-center py-12">
        <!-- Name and tagline -->
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 mb-4"
        >
          Vedant Andhale
        </h1>

        <p
          class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-2xl mx-auto mb-8"
        >
          "Concepts Drive Adaptability: Mastering ideas over tools"
        </p>

        <!-- Download button -->
        <a
          href="https://links.vedant.me/resume"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 py-3 px-6 rounded-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          <span>Download Resume</span>
        </a>
      </div>
    </div>
  </TopLayout>

  <BottomLayout>
    <div class="space-y-20">
      <!-- Tech Stack Section -->
      <section class="animate-fadeIn">
        <div
          class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-md rounded-2xl p-8 border border-gray-200 dark:border-gray-800 shadow-xl"
        >
          <div
            class="absolute -top-5 left-8 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full text-white font-medium shadow-md"
          >
            Tech Stack
          </div>

          <div class="flex flex-wrap items-center gap-3 mt-6">
            {
              stack.map((item) => (
                <div class="group">
                  <StackCard text={item.text} icon={item.icon} />
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Projects Section -->
      <section class="animate-fadeIn">
        <div
          class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-md rounded-2xl p-8 border border-gray-200 dark:border-gray-800 shadow-xl"
        >
          <div
            class="absolute -top-5 left-8 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full text-white font-medium shadow-md"
          >
            Featured Projects
          </div>

          <ul class="mt-6 space-y-10">
            {
              projects.map((entry) => (
                <li class="relative">
                  <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-blue-400 to-indigo-400 rounded-full" />

                  <div class="pl-6">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 mb-3">
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                        {entry.data.title}
                      </h3>

                      <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="w-4 h-4 mr-1"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <rect
                            x="3"
                            y="4"
                            width="18"
                            height="18"
                            rx="2"
                            ry="2"
                          />
                          <line x1="16" y1="2" x2="16" y2="6" />
                          <line x1="8" y1="2" x2="8" y2="6" />
                          <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                        {formatWorkDate(entry.data.date)}
                      </div>
                    </div>

                    <div class="flex flex-wrap items-center justify-between gap-3 mb-3">
                      <div class="text-base font-medium text-blue-600 dark:text-blue-400">
                        {entry.data.technology}
                      </div>

                      <div class="flex flex-wrap items-center gap-3">
                        {entry.data.demoUrl && (
                          <a
                            href={entry.data.demoUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 py-1.5 px-3 rounded-full bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700 text-sm hover:shadow-md transition-all duration-300 hover:scale-105"
                          >
                            <svg
                              class="w-4 h-4 text-blue-600 dark:text-blue-400"
                              xmlns="http://www.w3.org/2000/svg"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                            >
                              <circle cx="12" cy="12" r="10" />
                              <line x1="2" y1="12" x2="22" y2="12" />
                              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
                            </svg>
                            <span>View {entry.data.card}</span>
                          </a>
                        )}

                        {entry.data.repoUrl && (
                          <a
                            href={entry.data.repoUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 py-1.5 px-3 rounded-full bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700 text-sm hover:shadow-md transition-all duration-300 hover:scale-105"
                          >
                            <svg
                              class="w-4 h-4 text-gray-700 dark:text-gray-300"
                              viewBox="0 0 98 96"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path
                                fill-rule="evenodd"
                                clip-rule="evenodd"
                                d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"
                                fill="currentColor"
                              />
                            </svg>
                            <span>Source Code</span>
                          </a>
                        )}
                      </div>
                    </div>

                    <div class="prose prose-sm dark:prose-invert max-w-none text-gray-600 dark:text-gray-300">
                      {entry.data.summary}
                    </div>
                  </div>
                </li>
              ))
            }
          </ul>

          <div class="flex justify-center mt-10">
            <a
              href="/projects"
              class="inline-flex items-center gap-2 py-2.5 px-5 rounded-full bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700 hover:shadow-md transition-all duration-300 hover:scale-105"
            >
              <span>View All Projects</span>
              <svg
                class="w-4 h-4"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>
        </div>
      </section>

      <!-- Certifications Section -->
      <section class="animate-fadeIn">
        <div
          class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-md rounded-2xl p-8 border border-gray-200 dark:border-gray-800 shadow-xl"
        >
          <div
            class="absolute -top-5 left-8 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full text-white font-medium shadow-md"
          >
            Certifications
          </div>

          <ul class="mt-6 space-y-10">
            {
              certifications.map((entry) => (
                <li class="relative">
                  <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-blue-400 to-indigo-400 rounded-full" />

                  <div class="pl-6">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 mb-3">
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                        {entry.data.course}
                      </h3>

                      <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="w-4 h-4 mr-1"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <rect
                            x="3"
                            y="4"
                            width="18"
                            height="18"
                            rx="2"
                            ry="2"
                          />
                          <line x1="16" y1="2" x2="16" y2="6" />
                          <line x1="8" y1="2" x2="8" y2="6" />
                          <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                        {formatWorkDate(entry.data.dateStart)}
                      </div>
                    </div>

                    <div class="flex flex-wrap items-center justify-between gap-3 mb-3">
                      <div class="text-base font-medium text-blue-600 dark:text-blue-400">
                        {entry.data.platform}
                      </div>

                      <div class="flex flex-wrap items-center gap-3">
                        {entry.data.certificate && (
                          <a
                            href={entry.data.certificate}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 py-1.5 px-3 rounded-full bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700 text-sm hover:shadow-md transition-all duration-300 hover:scale-105"
                          >
                            <svg
                              class="w-4 h-4 text-blue-600 dark:text-blue-400"
                              viewBox="0 0 24 24"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path
                                d="M19 3H5C3.89543 3 3 3.89543 3 5V19C3 20.1046 3.89543 21 5 21H19C20.1046 21 21 20.1046 21 19V5C21 3.89543 20.1046 3 19 3Z"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              />
                              <path
                                d="M8.5 7L12 10.5L15.5 7"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              />
                              <path
                                d="M12 10.5V17"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              />
                            </svg>
                            <span>View Certificate</span>
                          </a>
                        )}

                        {entry.data.credly && (
                          <a
                            href={entry.data.credly}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 py-1.5 px-3 rounded-full bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 border border-gray-200 dark:border-gray-700 text-sm hover:shadow-md transition-all duration-300 hover:scale-105"
                          >
                            <svg
                              class="w-4 h-4 text-blue-600 dark:text-blue-400"
                              viewBox="0 0 24 24"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path
                                d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              />
                              <path
                                d="M15 3h6v6"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              />
                              <path
                                d="M10 14L21 3"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                              />
                            </svg>
                            <span>View Credly</span>
                          </a>
                        )}
                      </div>
                    </div>

                    <div class="prose prose-sm dark:prose-invert max-w-none text-gray-600 dark:text-gray-300">
                      <entry.Content />
                    </div>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </section>

      <!-- Education Section -->
      <section class="animate-fadeIn">
        <div
          class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-md rounded-2xl p-8 border border-gray-200 dark:border-gray-800 shadow-xl"
        >
          <div
            class="absolute -top-5 left-8 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full text-white font-medium shadow-md"
          >
            Education
          </div>

          <ul class="mt-6 space-y-10">
            {
              resume.map((entry) => (
                <li class="relative">
                  <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-blue-400 to-indigo-400 rounded-full" />

                  <div class="pl-6">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 mb-3">
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                        {entry.data.company}
                      </h3>

                      <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="w-4 h-4 mr-1"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <rect
                            x="3"
                            y="4"
                            width="18"
                            height="18"
                            rx="2"
                            ry="2"
                          />
                          <line x1="16" y1="2" x2="16" y2="6" />
                          <line x1="8" y1="2" x2="8" y2="6" />
                          <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                        {formatWorkDate(entry.data.dateStart)} -{" "}
                        {formatWorkDate(entry.data.dateEnd)}
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="text-base font-medium text-blue-600 dark:text-blue-400">
                        {entry.data.role}
                      </div>
                    </div>

                    <div class="prose prose-sm dark:prose-invert max-w-none text-gray-600 dark:text-gray-300">
                      <entry.Content />
                    </div>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="animate-fadeIn">
        <div
          class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-md rounded-2xl p-8 border border-gray-200 dark:border-gray-800 shadow-xl"
        >
          <div
            class="absolute -top-5 left-8 px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full text-white font-medium shadow-md"
          >
            Let's Connect
          </div>

          <p class="text-lg text-gray-700 dark:text-gray-300 mt-6 mb-8">
            Reach out to me via email or on social media.
          </p>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
              SOCIALS.map((social) => (
                <a
                  href={social.HREF}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex items-center gap-3 p-4 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800/50 transition-colors border border-gray-100 dark:border-gray-800"
                >
                  <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30">
                    <span class="text-xl font-bold text-blue-600 dark:text-blue-400">
                      {social.NAME.charAt(0)}
                    </span>
                  </div>

                  <div>
                    <div class="font-medium text-gray-900 dark:text-gray-100">
                      {social.NAME}
                    </div>
                    <div class="text-sm text-gray-600 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {social.TEXT}
                    </div>
                  </div>

                  <svg
                    class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </BottomLayout>
</PageLayout>
