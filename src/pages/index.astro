---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <!-- Premium Background Effects -->
  <div class="fixed inset-0 -z-10">
    <!-- Light Mode: Premium 3D Gradient Background -->
    <div
      class="absolute inset-0 block bg-gradient-to-br from-blue-50 via-gray-50 to-white dark:hidden"
    >
      <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-100 via-transparent to-transparent opacity-70"
      >
      </div>
      <div id="particles1" class="fixed inset-0 opacity-40"></div>
      <div id="particles2" class="fixed inset-0 opacity-30"></div>
      <div id="particles3" class="fixed inset-0 opacity-20"></div>
      <!-- Modern grid with data visualization aesthetic -->
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(rgba(0, 0, 150, 0.03) 2px, transparent 2px); background-size: 30px 30px;"
      >
      </div>
    </div>

    <!-- Dark Theme: Enhanced Deep Space Background -->
    <div
      class="absolute inset-0 hidden bg-gradient-to-br from-gray-950 via-slate-900 to-black dark:block"
    >
      <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-900/20 via-transparent to-transparent opacity-70"
      >
      </div>
      <div id="stars1" class="fixed inset-0"></div>
      <div id="stars2" class="fixed inset-0"></div>
      <div id="stars3" class="fixed inset-0"></div>
      <!-- Data-inspired dot matrix -->
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(rgba(100, 150, 255, 0.05) 2px, transparent 2px); background-size: 25px 25px;"
      >
      </div>
    </div>
  </div>
  <script>
    // Defer non-critical background JS by adding it as a module to load after critical content
    document.addEventListener('DOMContentLoaded', () => {
      // Create a script element
      const script = document.createElement('script');
      // Add background effects only after the page has loaded
      script.src = '/js/bg.js';
      script.type = 'module';
      script.async = true;
      script.defer = true;
      // Append it to the end of body for better performance
      document.body.appendChild(script);

      // Remove any empty anchor tags that might be causing spacing issues
      const emptyAnchors = document.querySelectorAll(
        'a:empty, a:only-child:not(:has(*)):not([href=""]):not([href="#"])'
      );
      emptyAnchors.forEach((anchor) => {
        if (anchor.textContent?.trim() === '' && !anchor.querySelector('*')) {
          console.log('Removing empty anchor:', anchor);
          anchor.remove();
        }
      });
    });
  </script>

  <!-- HERO SECTION - Enhanced with 3D elements -->
