---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard";
import StackCard from "@components/StackCard.astro";
import { SITE, SOCIALS } from "@consts";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
const stack = [
  
  {
    text: "SQL",
    icon: "sql",
  },
  {
    text: "Python",
    icon: "python",
  },
  {
    text: "PowerBI",
    icon: "powerbi",
  },
  {
    text: "Excel",
    icon: "excel",
  },
  {
    text: "Pandas",
    icon: "pandas",
  },
  {
    text: "NumPy",
    icon: "numpy",
  },
  {
    text: "Matplotlib",
    icon: "matplotlib",
  },
  {
    text: "Scikit Learn",
    icon: "sklearn",
  },
  // {
  //   text: "Streamlit",
  //   icon: "streamlit",
  // },

  {
    text: "Anaconda",
    icon: "anaconda",
  },
  {
    text: "Git",
    icon: "git",
  },
  {
    text: "VS Code",
    icon: "vscode",
  },
];
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <!-- Premium Background Effects -->
  <div class="fixed inset-0 -z-10">
    <!-- Light Mode: Premium 3D Gradient Background -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-blue-50 via-gray-50 to-white block dark:hidden"
    >
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-100 via-transparent to-transparent opacity-70"></div>
      <div id="particles1" class="fixed inset-0 opacity-40"></div>
      <div id="particles2" class="fixed inset-0 opacity-30"></div>
      <div id="particles3" class="fixed inset-0 opacity-20"></div>
      <!-- Modern grid with data visualization aesthetic -->
      <div class="absolute inset-0" style="background-image: radial-gradient(rgba(0, 0, 150, 0.03) 2px, transparent 2px); background-size: 30px 30px;"></div>
    </div>
    
    <!-- Dark Theme: Enhanced Deep Space Background -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-gray-950 via-slate-900 to-black hidden dark:block"
    >
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-900/20 via-transparent to-transparent opacity-70"></div>
      <div id="stars1" class="fixed inset-0"></div>
      <div id="stars2" class="fixed inset-0"></div>
      <div id="stars3" class="fixed inset-0"></div>
      <!-- Data-inspired dot matrix -->
      <div class="absolute inset-0" style="background-image: radial-gradient(rgba(100, 150, 255, 0.05) 2px, transparent 2px); background-size: 25px 25px;"></div>
    </div>
  </div>
  <script is:inline src="/js/bg.js"></script>
  
  <script>
    // Remove any empty anchor tags that might be causing spacing issues
    document.addEventListener('DOMContentLoaded', () => {
      const emptyAnchors = document.querySelectorAll('a:empty, a:only-child:not(:has(*)):not([href=""]):not([href="#"])');
      emptyAnchors.forEach(anchor => {
        if (anchor.textContent.trim() === '' && !anchor.querySelector('*')) {
          console.log('Removing empty anchor:', anchor);
          anchor.remove();
        }
      });
    });
  </script>
  
  <!-- HERO SECTION - Enhanced with 3D elements -->
  <section
    class="relative min-h-screen flex items-center justify-center py-16 overflow-hidden"
  >
    <div class="absolute inset-0 pointer-events-none">
      <div
        class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-white/90 dark:to-black/90 z-10"
      >
      </div>
      <!-- Premium glow effect -->
      <div
        class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[250vw] aspect-square rounded-full animate-pulse-slow"
        style="background: radial-gradient(circle at center, rgba(59, 130, 246, 0.15) 0%, transparent 70%);"
      >
      </div>
      <!-- Enhanced grid pattern -->
      <div class="absolute inset-0 opacity-20 dark:opacity-30">
        <svg class="absolute h-full w-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern
              id="grid"
              width="40"
              height="40"
              patternUnits="userSpaceOnUse"
            >
              <path
                d="M 40 0 L 0 0 0 40"
                fill="none"
                stroke="currentColor"
                stroke-width="0.5"
                class="text-gray-200 dark:text-gray-800"></path>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)"></rect>
        </svg>
      </div>
    </div>
    <div class="relative z-20 w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col items-center text-center">
        <!-- Premium profile photo presentation with enhanced glow effect -->
        <div class="relative mb-8 animate-fadeIn">
          <div
            class="absolute inset-0 rounded-full blur-lg bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-500 dark:from-blue-600 dark:via-indigo-700 dark:to-purple-700 animate-pulse opacity-80"
          >
          </div>
          <div class="absolute inset-0 rounded-full blur-md bg-gradient-conic from-blue-500 via-indigo-500 to-blue-500 animate-spin-slow opacity-70"></div>
          <img
            src="/image/profile.webp"
            alt="Vedant Andhale"
            loading="lazy"
            class="relative w-28 h-28 md:w-36 md:h-36 lg:w-40 lg:h-40 rounded-full border-2 border-white dark:border-gray-800 object-cover shadow-xl"
          />
        </div>
        <!-- Modern introduction with animated text -->
        <div class="space-y-4 animate-slideUpFade">
          <p
            class="text-lg md:text-xl font-medium text-gray-700 dark:text-gray-300"
          >
            <span class="inline-flex items-center">
              <span class="animate-wave mr-2">ðŸ‘‹</span> Hi, I'm Vedant Andhale
            </span>
          </p>
          <h1
            id="typewriter-text"
            class="text-3xl md:text-4xl lg:text-5xl font-bold bg-clip-text text-transparent bg-gradient-conic from-blue-600 via-indigo-600 to-violet-500 dark:from-blue-400 dark:via-indigo-400 dark:to-violet-400"
          >
            Data Problem Solver
          </h1>
          <p
            class="text-base md:text-lg text-gray-600 dark:text-gray-400 max-w-lg mx-auto"
          >
            Currently learning to operationalize ML models
          </p>
          <!-- Premium CTA Buttons with glass morphism & neon effect -->
          <div class="flex flex-wrap gap-4 justify-center mt-8">
            <a
              href="/blog"
              class="group relative inline-flex items-center justify-center px-6 py-3 overflow-hidden rounded-full bg-gradient-to-r from-blue-600 via-indigo-600 to-violet-600 text-white font-medium transition-all duration-300 ease-out hover:scale-105 hover:shadow-lg hover:shadow-blue-500/25 dark:hover:shadow-blue-400/25"
            >
              <span class="relative z-10">Read my blog</span>
              <span class="absolute inset-0 -z-10 bg-gradient-to-r from-blue-600 via-indigo-600 to-violet-600 opacity-0 group-hover:opacity-100 blur-xl transition-all duration-300 group-hover:duration-200"></span>
            </a>
            <a
              href="/projects"
              class="group relative inline-flex items-center justify-center px-6 py-3 overflow-hidden rounded-full bg-white dark:bg-gray-900 text-gray-800 dark:text-white border border-gray-200 dark:border-gray-700 font-medium transition-all duration-300 ease-out hover:scale-105 hover:shadow-lg backdrop-blur-sm"
            >
              <span class="relative">View my projects</span>
              <span class="absolute inset-0 -z-10 opacity-0 group-hover:opacity-100 bg-gradient-to-r from-gray-100 to-white dark:from-gray-800 dark:to-gray-900 blur-xl transition-all duration-300"></span>
            </a>
          </div>
          <!-- Enhanced Scroll indicator -->
          <div class="mt-12 animate-bounce">
            <div
              class="flex flex-col justify-center items-center text-gray-500 dark:text-gray-400"
            >
              <span class="text-sm font-medium">Scroll</span>
              <svg
                width="16"
                height="16"
                viewBox="0 0 16 16"
                class="mt-1"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M8 3.33325V12.6666"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M12.6668 8L8.00016 12.6667L3.3335 8"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTENT SECTIONS with premium glass morphism effect -->
  <div class="relative bg-white dark:bg-gray-950">
    <div
      class="absolute left-0 right-0 top-0 h-20 bg-gradient-to-b from-white dark:from-gray-950 to-transparent z-10"
    >
    </div>

    <div
      class="relative z-20 mx-auto max-w-5xl px-3 sm:px-4 md:px-5 lg:px-6 py-12 sm:py-14 md:py-16 space-y-12 sm:space-y-14 md:space-y-16"
    >
      <!-- About Section - Premium design -->
      <section class="animate-fadeIn">
        <div class="relative">
          <!-- Enhanced glow effects -->
          <div
            class="absolute -top-10 -left-10 w-40 h-40 bg-gradient-radial from-blue-200 to-transparent dark:from-blue-900/30 dark:to-transparent rounded-full blur-3xl opacity-70"
          >
          </div>
          <div
            class="absolute -bottom-10 -right-10 w-40 h-40 bg-gradient-radial from-indigo-200 to-transparent dark:from-indigo-900/30 dark:to-transparent rounded-full blur-3xl opacity-70"
          >
          </div>

          <!-- Premium glass card with subtle data-inspired pattern -->
          <div
            class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-xl rounded-xl sm:rounded-2xl md:rounded-3xl p-5 sm:p-6 md:p-8 border border-gray-100/80 dark:border-gray-800/80 shadow-lg"
            style="background-image: linear-gradient(to right, rgba(220, 230, 255, 0.03) 1px, transparent 1px), linear-gradient(to bottom, rgba(220, 230, 255, 0.03) 1px, transparent 1px); background-size: 20px 20px;"
          >
            <div class="relative">
              <!-- Section heading with premium decoration -->
              <div class="flex items-center mb-6 sm:mb-8">
                <div class="h-px flex-1 bg-gradient-to-r from-transparent to-blue-200 dark:to-blue-900/30"></div>
                <h2
                  class="text-xl sm:text-2xl md:text-3xl font-bold px-3 sm:px-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400"
                >
                  About Me
                </h2>
                <div class="h-px flex-1 bg-gradient-to-l from-transparent to-blue-200 dark:to-blue-900/30"></div>
              </div>

              <div class="prose prose-slate dark:prose-invert max-w-none text-sm sm:text-base">
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  Hello ðŸ‘‹,<br />I'm Vedant Andhale, a passionate technology
                  enthusiast with a profound love for programming. Currently
                  pursuing a Bachelor's degree.
                </p>

                <h3
                  class="text-base sm:text-lg md:text-xl font-semibold text-gray-800 dark:text-gray-200 mt-6 sm:mt-8 flex items-center"
                >
                  <span class="w-7 h-7 sm:w-8 sm:h-8 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                  </span>
                  My Journey
                </h3>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  Although I began my journey in web development during my
                  bachelor's studies, I discovered my true passion lay in the
                  realm of data. My deep affinity for data motivated me to delve
                  deeper into its complexities and intricacies.
                </p>

                <h3
                  class="text-base sm:text-lg md:text-xl font-semibold text-gray-800 dark:text-gray-200 mt-6 sm:mt-8 flex items-center"
                >
                  <span class="w-7 h-7 sm:w-8 sm:h-8 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                  </span>
                  My Passion
                </h3>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  My deep affinity for data fuels my passion for sharing insights
                  and knowledge from the ever-evolving world of data.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Tech Stack Section - Premium design -->
      <section class="animate-fadeIn">
        <div class="relative">
          <!-- Enhanced glow effects -->
          <div
            class="absolute -top-10 -left-10 w-40 h-40 bg-gradient-radial from-indigo-200 to-transparent dark:from-indigo-900/30 dark:to-transparent rounded-full blur-3xl opacity-70"
          >
          </div>

          <!-- Premium glass card with tech-inspired pattern -->
          <div
            class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-xl rounded-xl sm:rounded-2xl md:rounded-3xl p-5 sm:p-6 md:p-8 border border-gray-100/80 dark:border-gray-800/80 shadow-lg overflow-hidden"
          >
            <!-- Technology pattern background -->
            <div class="absolute inset-0 -z-10 opacity-[0.03] dark:opacity-[0.02]">
              <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                <defs>
                  <pattern id="circuit" width="50" height="50" patternUnits="userSpaceOnUse">
                    <path d="M 50 0 L 0 0 0 50" fill="none" stroke="currentColor" stroke-width="0.5" class="text-indigo-500"/>
                    <circle cx="25" cy="25" r="3" fill="none" stroke="currentColor" stroke-width="0.5" class="text-indigo-500"/>
                    <path d="M25 0 L25 50 M0 25 L50 25" fill="none" stroke="currentColor" stroke-width="0.5" class="text-indigo-500"/>
                  </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#circuit)" />
              </svg>
            </div>

            <!-- Section heading with premium decoration -->
            <div class="flex items-center mb-6 sm:mb-8">
              <span class="w-8 h-8 sm:w-10 sm:h-10 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2 sm:mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="16 18 22 12 16 6"/>
                  <polyline points="8 6 2 12 8 18"/>
                </svg>
              </span>
              <h2
                class="text-xl sm:text-2xl md:text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400"
              >
                My Tech Stack
              </h2>
            </div>

            <!-- Enhanced tech stack cards with uniform appearance -->
            <div class="flex flex-wrap items-center gap-2 sm:gap-3 mt-4 sm:mt-6">
              {
                stack.map((item) => (
                  <div class="group transform transition-all duration-300 hover:scale-110">
                    <StackCard text={item.text} icon={item.icon} />
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </section>

      <!-- Projects Preview Section -->
      <section class="animate-fadeIn">
        <div class="relative">
          <!-- Enhanced glow effects -->
          <div class="absolute -top-10 -right-10 w-40 h-40 bg-gradient-radial from-blue-200 to-transparent dark:from-blue-900/30 dark:to-transparent rounded-full blur-3xl opacity-70"></div>
          <!-- Premium glass card -->
          <div class="relative bg-white/70 dark:bg-gray-900/70 backdrop-blur-xl rounded-xl sm:rounded-2xl md:rounded-3xl p-4 sm:p-6 md:p-8 border border-gray-100/80 dark:border-gray-800/80 shadow-lg overflow-hidden">
            <!-- Data-inspired background pattern -->
            <div class="absolute inset-0 -z-10 opacity-[0.03] dark:opacity-[0.02]">
              <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                <defs>
                  <pattern id="projectGrid" width="100" height="100" patternUnits="userSpaceOnUse">
                    <rect width="100" height="100" fill="url(#smallGrid)"/>
                    <path d="M 100 0 L 0 0 0 100" fill="none" stroke="currentColor" stroke-width="1" class="text-blue-500"/>
                  </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#projectGrid)" />
              </svg>
            </div>
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-4 sm:mb-6">
              <!-- Section heading -->
              <div class="flex items-center">
                <span class="w-8 h-8 sm:w-10 sm:h-10 inline-flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30 mr-2 sm:mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="12 2 2 7 12 12 22 7 12 2"/>
                    <polyline points="2 17 12 22 22 17"/>
                    <polyline points="2 12 12 17 22 12"/>
                  </svg>
                </span>
                <h2 class="text-xl sm:text-2xl md:text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">
